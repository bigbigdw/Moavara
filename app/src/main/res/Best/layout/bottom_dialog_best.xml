<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0D0E10"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView

                android:layout_width="134dp"
                android:layout_height="194dp"
                android:layout_marginEnd="15dp"
                app:cardCornerRadius="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iview_BookImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/TODO"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/booktest" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/iview_Ranking"
                                android:layout_width="58dp"
                                android:layout_height="31dp"
                                android:adjustViewBounds="true"
                                android:contentDescription="@string/TODO"
                                android:scaleType="fitXY" />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/BestWrap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tviewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:breakStrategy="high_quality"
                    android:ellipsize="end"
                    android:fontFamily="@font/noto_sans_bold"
                    android:textColor="#FAFAFA"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="@string/Common_BookTitle" />

                <TextView
                    android:id="@+id/tviewWriter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:breakStrategy="high_quality"
                    android:ellipsize="end"
                    android:fontFamily="@font/noto_sans"
                    android:maxLines="1"
                    android:textColor="#FAFAFA"
                    android:textSize="12sp"
                    tools:text="@string/Common_BookWriter" />

                <TextView
                    android:id="@+id/tviewInfo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="2dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/noto_sans_bold"
                    android:maxLines="3"
                    android:textColor="#FAFAFA"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="@string/Common_Count"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tviewInfo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/noto_sans_bold"
                    android:maxLines="3"
                    android:textColor="#FAFAFA"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="@string/Common_Count"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tviewInfo3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/noto_sans_bold"
                    android:maxLines="3"
                    android:textColor="#FAFAFA"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="@string/Common_Count"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tviewInfo4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/noto_sans_bold"
                    android:maxLines="3"
                    android:textColor="#FAFAFA"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="@string/Common_Count"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tviewInfo5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/noto_sans_bold"
                    android:maxLines="3"
                    android:textColor="#FAFAFA"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="@string/Common_Count"
                    tools:visibility="visible" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0D0E10"
            android:orientation="vertical">

            <include
                android:id="@+id/includeRank"
                layout="@layout/include_rank"
                android:animateLayoutChanges="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llayoutBtnLeft"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#03A9F4"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pick하기"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llayoutBtnRight"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#844DF3"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Best_BottomDialogBtn"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lview_detail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#03A9F4"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작품 상세"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>