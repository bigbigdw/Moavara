<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E20"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="866dp">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/BookAppBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f9f9f9"
                android:theme="@style/AppTheme.AppBarOverlay">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentScrim="#0D0D0D"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_collapseMode="parallax">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/BookDetail_CollapseWrap"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="55dp"
                                android:background="#1E1E20"
                                android:orientation="vertical"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <include
                                    android:id="@+id/inclue_best_detail"
                                    layout="@layout/include_best_detail"
                                    android:animateLayoutChanges="true" />

                                <LinearLayout
                                    android:id="@+id/llayoutIntro"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:background="#0D0E10"
                                    android:orientation="horizontal"
                                    android:paddingStart="16dp"
                                    android:paddingTop="16dp"
                                    android:paddingEnd="16dp"
                                    android:paddingBottom="24dp">

                                    <TextView
                                        android:id="@+id/tviewIntro"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:breakStrategy="high_quality"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/noto_sans"
                                        android:text="@string/Common_BookIntro"
                                        android:textColor="#ffffff"
                                        android:textSize="14sp" />
                                </LinearLayout>

                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </FrameLayout>

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="#0D0E10"
                        app:layout_collapseMode="pin"
                        app:popupTheme="@style/AppTheme.PopupOverlay">

                    </androidx.appcompat.widget.Toolbar>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:gravity="left|center_vertical"
                        android:orientation="vertical"
                        app:layout_collapseMode="pin">

                        <ImageView
                            android:id="@+id/HomeImg"
                            android:layout_width="110dp"
                            android:layout_height="22dp"
                            android:layout_marginLeft="48dp"
                            android:contentDescription="@string/TODO"
                            android:src="@drawable/moabara_logo" />
                    </LinearLayout>


                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="60dp"
                android:orientation="vertical"
                android:textColor="#222222"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="#0D0E10"
                    app:itemBackground="@android:color/transparent"
                    app:itemIconTint="#00d180"
                    app:itemTextColor="#0df0df"
                    app:tabGravity="fill"
                    app:tabIndicatorColor="#844DF3"
                    app:tabMode="fixed"
                    app:tabSelectedTextColor="#844DF3"
                    app:tabTextColor="#565C69">

                </com.google.android.material.tabs.TabLayout>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#1E1E20"
                    android:fillViewport="true">

                    <LinearLayout
                        android:id="@+id/llayoutWrap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </androidx.core.widget.NestedScrollView>

            </LinearLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/llayoutBtnLeft"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#03A9F4"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pick하기"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llayoutBtnRight"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#844DF3"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Best_BottomDialogBtn"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>

