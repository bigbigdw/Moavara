        <androidx.cardview.widget.CardView
            android:id="@+id/cview_Wrap1"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            app:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iview_BookImg1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/TODO"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/booktest" />

                <LinearLayout
                    android:id="@+id/llayout_Cover1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#B3000000"
                    android:orientation="vertical"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/llayoutNull1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#26292E"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/TODO"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_launcher_gray" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/TODO"
                    android:scaleType="fitXY"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/booktest" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

