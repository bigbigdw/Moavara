<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#1E1E20"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:background="#0D0E10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llayoutBefore"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="18dp"
            android:background="#3F51B5"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tviewMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:layout_weight="1"
            android:fontFamily="@font/pretendardvariable"
            android:text="22년 02월"
            android:textAlignment="center"
            android:textColor="#EDE6FD"
            android:textSize="17sp" />

        <LinearLayout
            android:id="@+id/llayoutAfter"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="18dp"
            android:background="#3F51B5"
            android:orientation="horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0D0E10"
        android:gravity="right|center_vertical|end"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="#0D0E10"
            android:fontFamily="@font/pretendardvariable"
            android:gravity="center_horizontal|center_vertical"
            android:text="일"
            android:textAlignment="center"
            android:textColor="#FDFDFD"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="#0D0E10"
            android:fontFamily="@font/pretendardvariable"
            android:gravity="center_horizontal|center_vertical"
            android:text="월"
            android:textAlignment="center"
            android:textColor="#FDFDFD"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="#0D0E10"
            android:fontFamily="@font/pretendardvariable"
            android:gravity="center_horizontal|center_vertical"
            android:text="화"
            android:textAlignment="center"
            android:textColor="#FDFDFD"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="#0D0E10"
            android:fontFamily="@font/pretendardvariable"
            android:gravity="center_horizontal|center_vertical"
            android:text="수"
            android:textAlignment="center"
            android:textColor="#FDFDFD"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="#0D0E10"
            android:fontFamily="@font/pretendardvariable"
            android:gravity="center_horizontal|center_vertical"
            android:text="목"
            android:textAlignment="center"
            android:textColor="#FDFDFD"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="#0D0E10"
            android:fontFamily="@font/pretendardvariable"
            android:gravity="center_horizontal|center_vertical"
            android:text="금"
            android:textAlignment="center"
            android:textColor="#FDFDFD"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="#0D0E10"
            android:fontFamily="@font/pretendardvariable"
            android:gravity="center_horizontal|center_vertical"
            android:text="토"
            android:textAlignment="center"
            android:textColor="#FDFDFD"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <include
        android:id="@+id/includeRank"
        layout="@layout/include_rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rview_BestMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1E1E20" />

</LinearLayout>