<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1E1E20"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/Img_Wrap"
        android:layout_width="92dp"
        android:layout_height="140dp"
        app:cardCornerRadius="6dp">

        <ImageView
            android:id="@+id/iviewBookCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/TODO"
            android:scaleType="fitXY" />

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tviewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:breakStrategy="high_quality"
            android:ellipsize="end"
            android:fontFamily="@font/pretendardvariable"
            android:text="@string/Common_BookTitle"
            android:textAlignment="center"
            android:textColor="#EDE6FD"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tviewWriter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:breakStrategy="high_quality"
                android:ellipsize="end"
                android:fontFamily="@font/pretendardvariable"
                android:maxLines="1"
                android:text="@string/Common_BookWriter"
                android:textColor="#6E7686"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tviewBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/pretendardvariable"
                android:maxLines="3"
                android:text=" | "
                android:textColor="#6E7686"
                android:textSize="11sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tviewInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:breakStrategy="high_quality"
                android:ellipsize="end"
                android:fontFamily="@font/pretendardvariable"
                android:maxLines="3"
                android:text="@string/Common_Count"
                android:textColor="#6E7686"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="5dp"
                    android:contentDescription="@string/TODO"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_launcher_gray" />

                <TextView
                    android:id="@+id/tviewInfo7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:breakStrategy="high_quality"
                    android:ellipsize="end"
                    android:fontFamily="@font/pretendardvariable"
                    android:maxLines="3"
                    android:text="@string/Common_Count"
                    android:textAlignment="center"
                    android:textColor="#EDE6FD"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="28dp"
                android:background="#EDE6FD" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="5dp"
                    android:contentDescription="@string/TODO"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_launcher_gray" />

                <TextView
                    android:id="@+id/tviewInfo2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:breakStrategy="high_quality"
                    android:ellipsize="end"
                    android:fontFamily="@font/pretendardvariable"
                    android:maxLines="3"
                    android:text="@string/Common_Count"
                    android:textAlignment="center"
                    android:textColor="#EDE6FD"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="28dp"
                android:background="#EDE6FD" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="5dp"
                    android:contentDescription="@string/TODO"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_launcher_gray" />

                <TextView
                    android:id="@+id/tviewInfo4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:breakStrategy="high_quality"
                    android:ellipsize="end"
                    android:fontFamily="@font/pretendardvariable"
                    android:maxLines="3"
                    android:text="@string/Common_Count"
                    android:textAlignment="center"
                    android:textColor="#EDE6FD"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:id="@+id/viewTab4"
                android:layout_width="1dp"
                android:layout_height="28dp"
                android:background="#EDE6FD" />

            <LinearLayout
                android:id="@+id/llayoutTab4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="5dp"
                    android:contentDescription="@string/TODO"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_launcher_gray" />

                <TextView
                    android:id="@+id/tviewInfo3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:breakStrategy="high_quality"
                    android:ellipsize="end"
                    android:fontFamily="@font/pretendardvariable"
                    android:maxLines="3"
                    android:text="@string/Common_Count"
                    android:textAlignment="center"
                    android:textColor="#EDE6FD"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
