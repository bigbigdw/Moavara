<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/llayoutResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <include
            android:id="@+id/blank"
            layout="@layout/etc_blank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="gone" />

        <include
            android:id="@+id/searchResult"
            layout="@layout/include_best_detail"
            android:animateLayoutChanges="true" />

        <LinearLayout
            android:id="@+id/llayoutBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="24dp"
            android:background="#1E1E20"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="41dp"
                android:background="#621CEF"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardvariable"
                    android:text="@string/Best_BottomDialogBtn"
                    android:textColor="#EDE6FD"
                    android:textSize="20dp"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="41dp"
                android:background="#621CEF"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardvariable"
                    android:text="@string/Best_BottomDialogBtn"
                    android:textColor="#EDE6FD"
                    android:textSize="20dp"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llayoutSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".Search.FragmentSearch"
        tools:visibility="visible">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tviewSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="검색검색"
                    android:textAlignment="center"
                    android:textColor="#E91E63" />

                <SearchView
                    android:id="@+id/sview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="18dp"
                    android:background="#1E1E20"
                    android:gravity="right|end"
                    android:iconifiedByDefault="false"
                    android:inputType="number"
                    android:layoutDirection="rtl"
                    android:queryHint='찾으실 작품을 검색해주세요'
                    android:searchHintIcon="@android:drawable/ic_menu_search"
                    android:searchIcon="@android:drawable/ic_menu_search" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>