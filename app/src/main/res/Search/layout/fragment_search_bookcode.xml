<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E20"
    android:orientation="vertical">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rviewType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp" />

    <SearchView
        android:id="@+id/sview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="12dp"
        android:gravity="right|end"
        android:iconifiedByDefault="false"

        android:layoutDirection="rtl"
        android:queryHint='찾으실 작품을 검색해주세요'
        android:searchHintIcon="@android:drawable/ic_menu_search"
        android:searchIcon="@android:drawable/ic_menu_search"
        android:textColor="#E2E3E7"
        android:textColorHint="#3E424B" />

    <LinearLayout
        android:id="@+id/llayoutResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <include
            android:id="@+id/blank"
            layout="@layout/etc_blank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="gone" />

        <include
            android:id="@+id/searchResult"
            layout="@layout/include_best_detail"
            android:animateLayoutChanges="true" />

        <LinearLayout
            android:id="@+id/llayoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="#1E1E20"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llayoutPick"
                android:layout_width="260dp"
                android:layout_height="41dp"
                android:background="#621CEF"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tviewPick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardvariable"
                    android:text="Pick 하기"
                    android:textColor="#EDE6FD"
                    android:textSize="20dp"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llayoutView"
                android:layout_width="260dp"
                android:layout_height="41dp"
                android:layout_marginTop="18dp"
                android:background="#3E424B"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardvariable"
                    android:text="@string/Best_BottomDialogBtn"
                    android:textColor="#EDE6FD"
                    android:textSize="20dp"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llayoutSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="28dp"
        tools:visibility="gone">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tviewSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="검색검색"
                    android:textAlignment="center"
                    android:textColor="#E91E63" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</LinearLayout>