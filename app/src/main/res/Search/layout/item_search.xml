<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llayoutWrap"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginBottom="18dp"
    android:orientation="horizontal"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.cardview.widget.CardView
        android:layout_width="91dp"
        android:layout_height="132dp"
        android:layout_marginEnd="15dp"
        app:cardCornerRadius="6dp">

        <ImageView
            android:id="@+id/iview"
            android:layout_width="91dp"
            android:layout_height="132dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/TODO"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/booktest" />

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/BookContentsWrapC"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tviewPlatform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:breakStrategy="high_quality"
            android:ellipsize="end"
            android:fontFamily="@font/noto_sans"
            android:maxLines="3"
            android:text="@string/Common_BookIntro"
            android:textColor="#767676"
            android:textSize="14sp"
            tools:text="123123123123" />

        <TextView
            android:id="@+id/tviewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:breakStrategy="high_quality"
            android:ellipsize="end"
            android:fontFamily="@font/noto_sans_bold"
            android:maxLines="1"
            android:text="@string/Common_BookTitle"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:text="123123123123" />

        <TextView
            android:id="@+id/tviewWriter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:breakStrategy="high_quality"
            android:ellipsize="end"
            android:fontFamily="@font/noto_sans"
            android:maxLines="1"
            android:text="@string/Common_BookWriter"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:visibility="visible"
            tools:text="123123123123" />

        <TextView
            android:id="@+id/tviewInfo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:breakStrategy="high_quality"
            android:ellipsize="end"
            android:fontFamily="@font/noto_sans"
            android:maxLines="1"
            android:text="@string/Common_BookWriter"
            android:textColor="#ffffff"
            android:textSize="12sp"
            tools:text="123123123123" />

        <TextView
            android:id="@+id/tviewInfo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:breakStrategy="high_quality"
            android:ellipsize="end"
            android:fontFamily="@font/noto_sans"
            android:maxLines="1"
            android:text="@string/Common_BookWriter"
            android:textColor="#ffffff"
            android:textSize="12sp"
            tools:text="123123123123" />

        <TextView
            android:id="@+id/tviewInfo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:breakStrategy="high_quality"
            android:ellipsize="end"
            android:fontFamily="@font/noto_sans"
            android:maxLines="1"
            android:text="@string/Common_BookWriter"
            android:textColor="#ffffff"
            android:textSize="12sp"
            tools:text="123123123123" />

    </LinearLayout>


</LinearLayout>
