<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3E424B"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llayoutWrap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1E1E20"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout

                android:id="@+id/llayoutUpper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#121212"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginTop="163dp"
                        android:contentDescription="@string/TODO"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/tviewTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/pretendardvariable"
                        android:text="Welcome"
                        android:textAlignment="center"
                        android:textColor="#EDE6FD"
                        android:textSize="24sp"
                        tools:visibility="gone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tviewUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendardvariable"
                            android:text="모아바라"
                            android:textAlignment="center"
                            android:textColor="#844DF3"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tviewUserName2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendardvariable"
                            android:text="모아바라에 오신것을 환영합니다."
                            android:textAlignment="center"
                            android:textColor="#EDE6FD"
                            android:textSize="14sp"
                            android:visibility="visible" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llayoutGenre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="visible"
                    tools:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="72dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tviewGenre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendardvariable"
                            android:text="장르"
                            android:textAlignment="center"
                            android:textColor="#844DF3"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendardvariable"
                            android:text="를 선택해주세요"
                            android:textAlignment="center"
                            android:textColor="#EDE6FD"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="22dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/llayout_btn1"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginStart="50dp"
                                android:layout_marginEnd="50dp"
                                android:layout_marginBottom="8dp"
                                android:background="#0D0E10"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pretendardvariable"
                                    android:text="판타지"
                                    android:textColor="#EDE6FD"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llayout_btn2"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginStart="50dp"
                                android:layout_marginEnd="50dp"
                                android:layout_marginBottom="8dp"
                                android:background="#0D0E10"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pretendardvariable"
                                    android:text="로맨스"
                                    android:textColor="#EDE6FD"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llayout_btn3"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginStart="50dp"
                                android:layout_marginEnd="50dp"
                                android:layout_marginBottom="8dp"
                                android:background="#0D0E10"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pretendardvariable"
                                    android:text="장르 무관"
                                    android:textColor="#EDE6FD"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llayout_btn4"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginStart="50dp"
                                android:layout_marginEnd="50dp"
                                android:layout_marginBottom="45dp"
                                android:background="#0D0E10"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pretendardvariable"
                                    android:text="BL"
                                    android:textColor="#EDE6FD"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llayoutNickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical"
                    android:visibility="visible"
                    tools:visibility="visible">

                    <EditText
                        android:id="@+id/etviewNickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:layout_marginTop="57dp"
                        android:layout_marginEnd="28dp"
                        android:layout_marginBottom="80dp"
                        android:backgroundTint="#844DF3"
                        android:cursorVisible="@null"
                        android:ems="10"
                        android:fontFamily="@font/pretendardvariable"
                        android:hint="닉네임을 입력해 주세요"
                        android:inputType="textPersonName"
                        android:paddingStart="12dp"
                        android:textAlignment="textStart"
                        android:textColor="#EDE6FD"
                        android:textColorHint="#6E7686" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llayoutBtnNickname"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="#26292E"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="visible">


                <TextView
                    android:id="@+id/tviewNickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardvariable"
                    android:text="다음으로"
                    android:textAlignment="center"
                    android:textColor="#EDE6FD"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llayoutBtnGenre"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="#26292E"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="gone">


                <TextView
                    android:id="@+id/tviewBtnGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardvariable"
                    android:text="다음으로"
                    android:textAlignment="center"
                    android:textColor="#EDE6FD"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llayoutApplyGenre"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="#26292E"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="gone">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardvariable"
                    android:text="변경하기"
                    android:textAlignment="center"
                    android:textColor="#EDE6FD"
                    android:textSize="20sp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</LinearLayout>