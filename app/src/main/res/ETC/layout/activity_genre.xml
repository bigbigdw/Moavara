<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E20"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:background="@drawable/selector_genre_upper"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/TODO"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tviewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="안녕하세요."
            android:textAlignment="center"
            android:textColor="#EDE6FD"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tviewUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모아바라"
                android:textAlignment="center"
                android:textColor="#844DF3"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tviewUserName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 입니다."
                android:textAlignment="center"
                android:textColor="#EDE6FD"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llayoutNickname"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textAlignment="center"
                android:textColor="#844DF3"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="을 설정해주세요"
                android:textAlignment="center"
                android:textColor="#EDE6FD"
                android:textSize="18dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/etviewNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#EDE6FD"
            android:cursorVisible="@null"
            android:ems="10"
            android:hint="닉네임"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="#EDE6FD"
            android:textColorHint="#EDE6FD" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llayoutGenre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tviewGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="장르"
                    android:textAlignment="center"
                    android:textColor="#844DF3"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="를 선택해주세요"
                    android:textAlignment="center"
                    android:textColor="#EDE6FD"
                    android:textSize="18dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llayout_btn1"
                    android:layout_width="260dp"
                    android:layout_height="56dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/selector_genre"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="판타지"
                        android:textColor="#EDE6FD"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llayout_btn2"
                    android:layout_width="260dp"
                    android:layout_height="56dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/selector_genre"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="로맨스"
                        android:textColor="#EDE6FD"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llayout_btn4"
                    android:layout_width="260dp"
                    android:layout_height="56dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/selector_genre"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BL"
                        android:textColor="#EDE6FD"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llayout_btn3"
                    android:layout_width="260dp"
                    android:layout_height="56dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/selector_genre"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="장르 무관"
                        android:textColor="#EDE6FD"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clayoutBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0D0E10"
                android:fontFamily="@font/noto_sans_bold"
                android:text="다음"
                android:textColor="#EDE6FD"
                android:textStyle="bold"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#844DF3"
                android:fontFamily="@font/noto_sans_bold"
                android:text="확인"
                android:textColor="#EDE6FD"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="gone" />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>