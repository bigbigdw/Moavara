<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#23252D"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="22dp"
    android:paddingTop="62dp"
    android:paddingRight="22dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/LOGO"
            android:layout_width="158dp"
            android:layout_height="158dp"
            android:layout_marginBottom="62dp"
            android:contentDescription="@string/TODO"
            android:src="@drawable/likeit_3"
            tools:ignore="ImageContrastCheck" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/IDtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/Login_ID"
            android:textColorHint="#ffffff"
            app:boxStrokeColor="#eeeeee"
            app:hintTextColor="#ffffff"
            app:startIconTint="#ffffff">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#23252D"
                android:drawableTint="#888888"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textColor="#ffffff" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/PWtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/Login_PW"
            android:textColorHint="#ffffff"
            app:boxStrokeColor="#eeeeee"
            app:hintTextColor="#ffffff"
            app:startIconTint="#ffffff">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#23252D"
                android:drawableTint="#888888"
                android:ems="10"
                android:inputType="textPassword"
                android:textColor="#ffffff"  />
        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="120dp"
            android:gravity="center|end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/LoginMain_FindID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:text="@string/Login_FindID"
                android:textAlignment="textStart"
                android:textColor="#eeeeee" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:text="@string/Find_FindBar"
                android:textAlignment="textStart"
                android:textColor="#eeeeee" />

            <TextView
                android:id="@+id/LoginMain_FIndPW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:text="@string/Login_FindPW"
                android:textAlignment="textStart"
                android:textColor="#eeeeee"/>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/RegisterBtn"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FFFFFF"
                android:text="@string/Login_None"
                android:textColor="#888888"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/LoginBtn"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#eeeeee"
                android:text="@string/Login_Login"
                android:textColor="#ffffff"
                app:layout_constraintBottom_toTopOf="@+id/RegisterBtn"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
