<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3E424B"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#121212"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <ImageView
            android:id="@+id/HomeImg"
            android:layout_width="110dp"
            android:layout_height="22dp"
            android:contentDescription="@string/TODO"
            app:srcCompat="@drawable/moabara_logo" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/llayoutWrap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1E1E20"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_genre_upper"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_genre_upper"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:contentDescription="@string/TODO"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Hello"
                    android:textAlignment="center"
                    android:textColor="#EDE6FD"
                    android:textSize="24dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tviewUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="모아바라"
                        android:textAlignment="center"
                        android:textColor="#844DF3"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tviewUserName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="모아바라에 오신것을 환영합니다."
                        android:textAlignment="center"
                        android:textColor="#EDE6FD"
                        android:textSize="18dp"
                        android:visibility="visible" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tviewGenre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="관리자님 "
                        android:textAlignment="center"
                        android:textColor="#844DF3"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="환영합니다"
                        android:textAlignment="center"
                        android:textColor="#EDE6FD"
                        android:textSize="18dp" />
                </LinearLayout>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="22dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/llayoutBtn1"
                                android:layout_width="260dp"
                                android:layout_height="56dp"
                                android:layout_marginBottom="8dp"
                                android:background="@drawable/selector_genre"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="데이터 수집 중지"
                                    android:textColor="#EDE6FD"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llayout_btn2"
                                android:layout_width="260dp"
                                android:layout_height="56dp"
                                android:layout_marginBottom="8dp"
                                android:background="@drawable/selector_genre"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="데이터 수집 재개"
                                    android:textColor="#EDE6FD"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llayout_btn3"
                                android:layout_width="260dp"
                                android:layout_height="56dp"
                                android:layout_marginBottom="8dp"
                                android:background="@drawable/selector_genre"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="데이터 갱신"
                                    android:textColor="#EDE6FD"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llayout_btn4"
                                android:layout_width="260dp"
                                android:layout_height="56dp"
                                android:layout_marginBottom="8dp"
                                android:background="@drawable/selector_genre"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Room"
                                    android:textColor="#EDE6FD"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llayout_btn5"
                                android:layout_width="260dp"
                                android:layout_height="56dp"
                                android:layout_marginBottom="8dp"
                                android:background="@drawable/selector_genre"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Room 초기화"
                                    android:textColor="#EDE6FD"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llayout_btn6"
                                android:layout_width="260dp"
                                android:layout_height="56dp"
                                android:layout_marginBottom="8dp"
                                android:background="@drawable/selector_genre"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Room 데이터 갱신"
                                    android:textColor="#EDE6FD"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llayout_btn7"
                                android:layout_width="260dp"
                                android:layout_height="56dp"
                                android:layout_marginBottom="8dp"
                                android:background="@drawable/selector_genre"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="푸시 보내기"
                                    android:textColor="#EDE6FD"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llayout_btn8"
                                android:layout_width="260dp"
                                android:layout_height="56dp"
                                android:layout_marginBottom="8dp"
                                android:background="@drawable/selector_genre"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="테스트"
                                    android:textColor="#EDE6FD"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />
                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>